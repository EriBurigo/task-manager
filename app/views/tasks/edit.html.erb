<h1><%= action_name == 'new' ? 'Nova Tarefa' : 'Editar Tarefa' %></h1>

<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :name, 'Nome da Tarefa' %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Voltar', tasks_path %>
